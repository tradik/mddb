{
  "mcpServers": {
    "mddb": {
      "command": "docker",
      "args": [
        "run",
        "-i",
        "--rm",
        "--network",
        "host",
        "-e",
        "MCP_MODE=stdio",
        "-e",
        "MDDB_GRPC_ADDRESS=localhost:11024",
        "-e",
        "MDDB_REST_BASE_URL=http://localhost:11023",
        "-e",
        "MDDB_TRANSPORT_MODE=grpc_with_rest_fallback",
        "tradik/mddb:mcp"
      ],
      "env": {}
    }
  }
}
